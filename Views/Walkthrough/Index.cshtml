@model IEnumerable<WalkthroughApp.Models.Walkthrough>

@{
    ViewData["Title"] = "Walkthrough";
}

<h1>Walkthrough</h1>
<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Filters
</button>
<div class="collapse mt-1" id="collapseExample">
    <form asp-controller="Walkthrough" asp-action="Index" method="get">
        <label>From: <input type="date" name="startDate" /></label>
        <label>To: <input type="date" name="endDate" /></label>
        
        <label>Department: <input type="text" name="searchDepartment" /></label>
        <label>Process/Area Verified: <input type="text" name="searchProcedure" /></label>
        <label>Auditor: <input type="text" name="searchAuditor" /></label>
        <label>Compliant: <input type="text" name="searchCompliant" /></label>

        <input type="submit" value="Filter" />
        
    </form>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Species</th>
            <th>Department</th>
            <th>Shift</th>
            <th>Time</th>
            <th>Auditor</th>
            <th>Process/Areas Verified</th>
            <th>Compliant</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shift)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Auditor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procedure.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Compliant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                            
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>